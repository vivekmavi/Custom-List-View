<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView_in_row"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:padding="3dp"
        android:src="@drawable/test_image_avengers"/>
    <TextView
        android:id="@+id/textView1_row"
        android:layout_toRightOf="@id/imageView_in_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="25sp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/textView2_row"
        android:layout_toRightOf="@id/imageView_in_row"
        android:layout_below="@+id/textView1_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="25sp"
        android:textColor="#000"
        />

</RelativeLayout>